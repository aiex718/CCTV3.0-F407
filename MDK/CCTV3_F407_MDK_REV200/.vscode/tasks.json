{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Clean",
			"command": "rm",
			"args": [
				"-r",
				"${workspaceFolder}/Output/*"
			]
		},
		{
			"type": "shell",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang",
			"args": [
				"-std=c99",
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/Output/${fileBasenameNoExtension}",
				"-I",
				"${workspaceFolder}/",
				"-I",
				"${workspaceFolder}/User"
			],
			"options": {
				"cwd": "${workspaceFolder}/"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Compiler: /usr/bin/clang"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: mingw build active file",
			"command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/Output/${fileBasenameNoExtension}",
				"-I",
				"${workspaceFolder}/",
				"-I",
				"${workspaceFolder}/User"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\gcc.exe"
		}
	]
}